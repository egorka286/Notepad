#include <windows.h>
#include "resource.h"

/////////////////////////////////////////////////////////////////////////////
//
// Menu
//

MAIN_MENU MENU
BEGIN
    POPUP "Файл"
    BEGIN
        MENUITEM "Создать",                     ID_CREATE
        MENUITEM "Открыть",                     ID_OPEN
        MENUITEM "Сохранить",                   ID_SAVE
        MENUITEM SEPARATOR
        MENUITEM "Выход",                       ID_EXIT
    END
    POPUP "Правка"
    BEGIN
        MENUITEM "Отменить",                    ID_UNDO
        MENUITEM SEPARATOR
        MENUITEM "Вырезать",                    ID_CUT
        MENUITEM "Копировать",                  ID_COPY
        MENUITEM "Вставить",                    ID_PASTE
        MENUITEM "Удалить",                     ID_DELETE
    END
    POPUP "Справка"
    BEGIN
        MENUITEM "О программе",                 ID_ABOUT
    END
END


